{
  "appname": "tinyChessServer",
  
  "game": {
    "variant": "bughouse",
    "time": 300,
    "backend_command": "python3 -u chessBackend.py",
    "backend_cwd": "./backend/"
  },
  
  "httpServer": {
    "port": 80,
    
    "serve_webclient": true,
    "static_dir": "./frontend"
  },
  
  "clients": {
    "websocket": {
      "enabled": true,
      "path": "/websocketclient"
    }
  },
  
  "observers": {
    "websocket": {
      "enabled": true,
      "pathBoardA": "/websocketObserverA",
      "pathBoardB": "/websocketObserverB"
    }
  }
}